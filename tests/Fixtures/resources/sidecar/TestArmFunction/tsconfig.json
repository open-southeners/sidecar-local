{
    "compileOnSave": false,
    "compilerOptions": {
        "allowUnreachableCode": false,
        "moduleResolution": "node",
        "module": "CommonJS",
        "target": "ES2017",
        "noImplicitAny": false,
        "preserveConstEnums": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "allowJs": true,
        "outDir": "types",
        // "declaration": true,
        // "declarationMap": true,
        // "emitDeclarationOnly": true,
        "types": [
            "node"
        ],
    },
    "include": [
        "src",
    ],
    "exclude": [
        "node_modules"
    ]
}